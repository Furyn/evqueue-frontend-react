{
  "manifest_version": 2,
  "name": "evQueue",
  "version": "1.0",
  "description": "evQueue browser plugin",
  "homepage_url": "https://github.com/coldsource/evqueue-frontend-react",
  "icons": {
    "48": "htdocs/images/favicon-32x32.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ],
  
  "background": {
    "scripts": ["browser-plugin/background.js"]
  },

  "browser_action": {
    "default_icon": "htdocs/images/favicon-32x32.png",
    "default_title": "evQueue"
  },
  
  "options_ui": {
    "page": "/browser-plugin/settings.html",
    "open_in_tab":true
  }
} 
